{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "os:default",
    "core:window:allow-set-size",
    "core:window:allow-set-position",
    "global-shortcut:allow-register-all",
    "global-shortcut:allow-register",
    "global-shortcut:allow-is-registered",
    "core:window:allow-set-focus",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:app:allow-app-hide",
    "deep-link:allow-get-current",
    "deep-link:default",
    "core:app:allow-app-show",
    "process:default",
    "notification:allow-is-permission-granted",
    "notification:default",
    "notification:allow-request-permission",
    "autostart:allow-enable",
    "autostart:allow-disable",
    "autostart:allow-is-enabled",
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$HOME/.daijinia/screenshot/*" }, { "path": "$HOME/.daijinia/*" }]
    },
    {
      "identifier": "fs:allow-app-read",
      "allow": [{ "path": "$HOME/.daijinia/screenshot/*" }, { "path": "$HOME/.daijinia/*" }]
    },
    {
      "identifier": "fs:allow-app-write",
      "allow": [{ "path": "$HOME/.daijinia/*" }]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [{ "path": "$HOME/.daijinia/*" }]
    },
    {
      "identifier": "http:default",
      "allow": [{ "url": "http://192.168.3.16:3000" }]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "get-windows-gpu",
          "cmd": "cmd.exe",
          "args": [
            "/C",
            "wmic",
            "path",
            "win32_videocontroller",
            "get",
            "name,adapterram,VideoProcessor,AdapterRAM,AdapterCompatibility"
          ]
        },
        {
          "name": "get-windows-monitor",
          "cmd": "cmd.exe",
          "args": [
            "/C",
            "wmic",
            "path",
            "Win32_DesktopMonitor",
            "get",
            "Name, MonitorType, ScreenHeight, ScreenWidth"
          ]
        },
        {
          "name": "get-windows-internet",
          "cmd": "cmd.exe",
          "args": ["/C", "ipconfig", "/all"]
        },
        {
          "name": "get-windows-user",
          "cmd": "cmd.exe",
          "args": ["/C", "whoami"]
        },
        {
          "name": "get-linux-gpu",
          "cmd": "sudo",
          "args": ["lshw", "-C", "display"]
        },
        {
          "name": "get-linux-internet",
          "cmd": "ifconfig",
          "args": []
        },
        {
          "name": "get-linux-user",
          "cmd": "whoami",
          "args": []
        },
        {
          "name": "get-linux-monitor",
          "cmd": "sudo",
          "args": ["xrandr", "--verbose"]
        }
      ]
    }
  ]
}
